<Layout Style="min-height: 100vh; ">
    <Sider Collapsible>
        <div class="logo">
            <img src="images/logo1.png" alt="Logo" style="height: 55px; width: 200px " />
        </div>
    </Sider>
    <Layout Class="site-layout" >
        <Header Class="site-layout-background" Style="padding: 0;"><h3>MANAGE STUDENT DASHBOARD</h3></Header>
        <Content Style="margin:0 16px;" >
